generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model News {
  id          String   @id @default(uuid())
  title       String
  description String
  image       String
  type        NewsType
  status      NewsStatus
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

enum NewsType {
  NEWS
  BLOGS
  ARTICLES
}

enum NewsStatus {
  ACTIVE
  INACTIVE
}
